<h1>Listing contents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Approved By</th>
    <th>Created At</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%=h content.name %></td>
    <td><%=h content.category_id %></td>
    <td><%=h content.approved_by_id %></td>
    <td><%= content.created_at %></td>
    <td><%= link_to 'Show', content_path(content.id) %></td>
    <td><%= link_to 'Edit', edit_content_path(content.id) %></td>
    <td><%= link_to 'Destroy', content_path(content.id), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

